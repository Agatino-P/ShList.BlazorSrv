<style scoped>
    .iconbutton {
        width: 48px !important;
    }
</style>


@if (ShowDialog==true)
{
    <div class="modal fade show d-block" tabindex="-1" role="dialog" >
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Confirm Product Delete</h5>
                    <button type="button" class="close" @onclick="@OnNo" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <h1>Confirm Product Delete?</h1>
                    <p>Name: @Product.Name</p>
                    <p>Notes: @Product.Notes</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-primary fas fa-check" @onclick="@OnYes" />
                    <button type="button" class="btn btn-secondary fas fa-times" @onclick="@OnNo" data-dismiss="modal"/>
                </div>
            </div>
        </div>
    </div>
 }
