<div class="top-row pl-4 navbar navbar-dark">
    <a class="navbar-brand" href="">Shopping List</a>
    <button @onclick="ToggleNavMenu" class="navbar-toggler" >
        <span class="navbar-toggler-icon"></span>
    </button>
</div>

<div class="@NavMenuCssClass" @onclick="ToggleNavMenu">
    <ul class="nav flex-column">
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="products">
                <i class="fas fa-th fa-lg" aria-hidden="true"></i>
                <span style="margin-left: 15px">Products</span>
            </NavLink>
        </li>
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="shoppinglists">
                <i class="fas fa-th fa-lg" aria-hidden="true"></i>
                <span style="margin-left: 15px">Shopping Lists</span>
            </NavLink>
        </li>

    </ul>
</div>

@code {
    private bool collapseNavMenu = true;

    private string NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }
}
